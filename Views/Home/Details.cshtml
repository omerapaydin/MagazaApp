@model Product
<!-- Ürün Detay -->
<section class="py-5">
  <div class="container">
    <div class="row align-items-center">
      
      <!-- Sol: Ürün Resmi -->
      <div class="col-md-6 mb-4 mb-md-0">
        <img src="~/img/@Model.Image" alt="Ürün" class="img-fluid product-image">
      </div>
      
      <!-- Sağ: Ürün Bilgileri -->
      <div class="col-md-6">
        <h2>@Model.Title</h2>
        <p class="price">₺ @Model.Price</p>
        <p>@Model.Description</p>
        <div class="d-flex gap-2">
          <input type="number" class="form-control w-25" value="1" min="1">
          <button class="btn btn-success">Sepete Ekle</button>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Benzer Ürünler -->
<section class="py-5 bg-light">
  <div class="container">
    <h4 class="related-title mb-4">Benzer Ürünler</h4>
    <div class="row g-4">
      <div class="col-md-3">
        <div class="card">
          <img src="https://picsum.photos/300/200?random=11" class="card-img-top" alt="Ürün">
          <div class="card-body text-center">
            <h6>Mama Sandalyesi</h6>
            <p class="text-success fw-bold">₺799</p>
            <a href="detay.html" class="btn btn-outline-success btn-sm">İncele</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>





@section Styles {
    <link rel="stylesheet" href="~/css/Details.css" />
}