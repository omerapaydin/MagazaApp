@model Product
<section class="py-5">
  <div class="container">
    <div class="row align-items-center">
      
      <!-- Sol: Ürün Resmi -->
      <div class="col-md-6 mb-4 mb-md-0">
        <img src="~/img/@Model.Image" alt="Ürün" class="img-fluid product-image">
      </div>
      
      <!-- Sağ: Ürün Bilgileri -->
      <div class="col-md-6">
        <h2>@Model.Title</h2>
        <p class="price">₺ @Model.Price</p>
        <p>@Model.Description</p>
        <div class="d-flex gap-2">
          <input type="number" class="form-control w-25" value="1" min="1">
          <button class="btn btn-success">Sepete Ekle</button>
        </div>
      </div>
    </div>
  </div>
</section>

  <vc:benzer-urun></vc:benzer-urun>



@section Styles {
    <link rel="stylesheet" href="~/css/Details.css" />
}